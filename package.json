{
  "name": "distributed-payments-processing-system",
  "version": "1.0.0",
  "description": "Designed and implemented an event‐driven payments processing system with idempotent APIs, Kafka‐based settlement workflows, and an immutable financial ledger, ensuring correctness under retries and partial failures.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "ts-node src/db/migrate.ts",
    "start:api": "ts-node-dev --respawn --transpile-only src/api/server.ts",
    "start:outbox-publisher": "ts-node src/kafka/run-outbox-publisher.ts",
    "dev": "concurrently -k -n API,OUTBOX -c blue,green \"npm run start:api\" \"npm run start:outbox-publisher\"",
    "start:settlement-worker": "ts-node src/workers/settlement-worker.ts",
    "start:ledger-worker": "ts-node src/workers/ledger-worker.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yash-op7/Distributed-Payments-Processing-System.git"
  },
